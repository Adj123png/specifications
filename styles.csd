body {
    font-family: Arial, sans-serif;
    text-align: center;
    margin: 20px;
}

input, select {
    padding: 10px;
    margin: 10px;
    width: 80%;
    max-width: 300px;
}

.details {
    margin-top: 20px;
    text-align: left;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 10px;
    border: 1px solid #ddd;
}

.details > div {
    margin-bottom: 20px;
}
